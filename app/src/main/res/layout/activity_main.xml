<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91BAD6"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="104dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Dive Away"
            android:textColor="#FFFFFF"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Catch lionfish which are an invasive species and get a point!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="307dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:text="Avoid sea turtles which are an endangered species! If you spear them, you lose a point!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            app:srcCompat="@drawable/diver2" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#4f77aa"
            android:text="Start Game"
            android:textColor="#FFFFFF"
            android:textSize="26dp" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

